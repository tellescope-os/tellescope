{
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "strict": true
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src", "tests"]
}
